#!/bin/sh

# Purpose:
# For layer range, convert mrc images and/or auto-generate foldmasks.
#
# > ./fsub.sht <zmin> [zmax]


export MRC_TRIM=12

nproc=4
nslot=4

if (($# == 1))
then
    last=$1
else
    last=$2
fi

for lyr in $(seq $1 $last)
do
    echo $lyr
    if [ -d "$lyr" ]
    then
        cd $lyr
        QSUB_1NODE.sht 1 "makefm-$lyr" "" 1 $nslot "make -f make.fm -j $nproc EXTRA='""'"
        cd ..
    fi
done

